@page
@model CreateUserModel
@{
    ViewData["Title"] = "Neuen Benutzer anlegen";
}

<div class="container mt-4">
    <h2>Neuen Benutzer anlegen</h2>

    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <form method="post">
                        <div asp-validation-summary="All" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="Input.Email" class="form-label"></label>
                            <input asp-for="Input.Email" class="form-control" placeholder="benutzer@example.com" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.Role" class="form-label"></label>
                            <select asp-for="Input.Role" class="form-select">
                                <option value="">-- Bitte wählen --</option>
                                <option value="Admin">Admin</option>
                                <option value="Moderator">Moderator</option>
                                <option value="User">User</option>
                            </select>
                            <span asp-validation-for="Input.Role" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">
                                ✅ Benutzer erstellen
                            </button>
                            <a asp-page="/Admin/ManageUsers" class="btn btn-secondary">
                                ⬅️ Zurück zur Übersicht
                            </a>
                        </div>
                    </form>
                </div>
            </div>

            <div class="alert alert-info mt-3">
                <strong>ℹ️ Hinweis:</strong>
                <ul class="mb-0 mt-2">
                    <li>Ein sicheres Einmal-Passwort wird automatisch generiert</li>
                    <li>Das Passwort wird nach dem Erstellen angezeigt</li>
                    <li>Der Benutzer muss es beim ersten Login ändern</li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}