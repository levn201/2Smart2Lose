    </button>

</div>

<script>
    (function () {
      const wrapper  = document.getElementById("chatWrapper");
      const widget   = document.getElementById("chatWidget");
      const toggle   = document.getElementById("chatToggle");
      const form     = document.getElementById("chatForm");
      const input    = document.getElementById("chatInput");
      const messages = document.getElementById("chatMessages");

      // Startzustand: geschlossen
      wrapper.classList.add("is-closed");
      widget.style.display = "none";

      function openWidget() {
        wrapper.classList.remove("is-closed");
        widget.style.display = "flex";
        setTimeout(() => {
          messages.scrollTop = messages.scrollHeight;
          input.focus();
        }, 0);
      }

      function closeWidget() {
        wrapper.classList.add("is-closed");
        widget.style.display = "none";
      }

      function toggleWidget() {
        const isClosed = wrapper.classList.contains("is-closed");
        if (isClosed) openWidget();
        else closeWidget();
      }

      toggle.addEventListener("click", toggleWidget);

      // Send message (dummy)
      form.addEventListener("submit", (e) => {
        e.preventDefault();
        const text = input.value.trim();
        if (!text) return;

        const userMsg = document.createElement("div");
        userMsg.className = "msg msg-user";
        userMsg.textContent = text;
        messages.appendChild(userMsg);

        const botMsg = document.createElement("div");
        botMsg.className = "msg msg-bot";
        botMsg.textContent = "Danke! Ich habe deine Nachricht gesehen 🙂";
        messages.appendChild(botMsg);

        messages.scrollTop = messages.scrollHeight;
        input.value = "";
        input.focus();
      });

      // Enter sends, Shift+Enter newline
      input.addEventListener("keydown", (e) => {
        if (e.key === "Enter" && !e.shiftKey) {
          e.preventDefault();
          form.requestSubmit();
        }
      });

      // Optional: Klick außerhalb schließt
      document.addEventListener("click", (e) => {
        const clickedInside = wrapper.contains(e.target);
        if (!clickedInside) closeWidget();
      });
    })();
</script>